<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="16dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="About the App"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This application will be used to detect Dementia symptoms in its early stages. A set of questions related to cognitive and memory areas will be provided to determine the Dementia symptoms. In the end, scores that will pinpoint to any dementia traits will be shown. This app is suitable for patient and caregivers alike."
            android:textSize="16sp"
            android:layout_gravity="left"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/colorTextDark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Terms and Conditions"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This app is for non-commercial use and is only to be used for research purposes. This fulfills the 6-CIt and SCIDS tests term of use. "
            android:textSize="16sp"
            android:gravity="start"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/colorTextDark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Research and Developement Team"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="right"
                    android:paddingRight="8dp"
                    android:text="Developers"
                    android:textColor="@color/colorTextDark"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="left"
                    android:text="Ella Mampusti\nDr. Fadi Fayez Thabtah"
                    android:textColor="@color/colorTextDark"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="right"
                    android:paddingRight="8dp"
                    android:text="Support Team"
                    android:textColor="@color/colorTextDark"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="Raymund Herradura\nMohit Shrestha\nJithin Varghese"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/colorTextDark"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
